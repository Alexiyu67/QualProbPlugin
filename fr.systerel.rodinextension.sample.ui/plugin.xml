<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eventb.ui.editorItems">
      <choiceAttribute
            class="fr.systerel.rodinextension.sample.ui.manipulation.ProbabilisticAttributeManipulation"
            expandsHorizontally="true"
            id="fr.systerel.rodinextension.sample.ui.probabilistic"
            required="true"
            typeId="fr.systerel.rodinextension.sample.probabilistic">
      </choiceAttribute>
      <element
            defaultColumn="0"
            imagePath="icons/sample.gif"
            prefix="BOUND"
            typeId="fr.systerel.rodinextension.sample.bound">
      </element>
      <childRelation
            parentTypeId="org.eventb.core.machineFile">
         <childType
               priority="65"
               typeId="fr.systerel.rodinextension.sample.bound">
         </childType>
      </childRelation>
      <attributeRelation
            elementTypeId="fr.systerel.rodinextension.sample.bound">
         <attributeReference
               descriptionId="org.eventb.ui.expression">
         </attributeReference>
         <attributeReference
               descriptionId="org.eventb.ui.comment">
         </attributeReference>
      </attributeRelation>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            id="fr.systerel.rodinextension.sample.ui.boundContent"
            name="BoundElement"
            priority="lower">
         <triggerPoints>
            <instanceof
                  value="org.eventb.core.IMachineRoot">
            </instanceof>
         </triggerPoints>
         <possibleChildren>
            <instanceof
                  value="instanceof clause fr.systerel.rodinextension.sample.basis.IBound">
            </instanceof>
         </possibleChildren>
      </navigatorContent>
   </extension>

</plugin>
